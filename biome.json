{
  "files": {
    "ignore": ["dist"]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "style": {
        "noUselessElse": "off",
        "noNonNullAssertion": "off"
      },
      "suspicious": {
        "noExplicitAny": "off",
        "noShadowRestrictedNames": "off",
        "noControlCharactersInRegex": "off"
      }
    }
  },
  "formatter": {
    "indentStyle": "space",
    "lineWidth": 88
  },
  "organizeImports": {
    "enabled": false
  }
}
